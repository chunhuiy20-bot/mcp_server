# ============================================
# MySQL 数据库配置
# ============================================
# 主数据库连接字符串（异步）
MYSQL_CONFIG_ASYNC=mysql+aiomysql://username:password@host:port/database

# 第二个数据库连接字符串
MYSQL_CONFIG_ASYNC2=mysql+aiomysql://username:password@host:port/database2

# 财务数据库连接字符串
MYSQL_CONFIG_ASYNC_FINANCE_DB=mysql+aiomysql://username:password@host:port/finance_db

# 数据库连接池配置（可选，有默认值）
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# ============================================
# Redis 配置
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password
# REDIS_URI=redis://:password@host:port/db  # 可选：完整的 Redis URI

# ============================================
# OpenAI API 配置
# ============================================
# 官方 OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_BASE=https://api.openai.com/v1

# 第二组 OpenAI API（用于特定服务）
OPENAI_API_KEY2=sk-your-second-openai-api-key
OPENAI_BASE_URL2=https://api.openai.com/v1

# 非官方 OpenAI API（反代/第三方）
UNOFFICIAL_OPENAI_API_KEY=your-unofficial-api-key
UNOFFICIAL_OPENAI_BASE_URL=https://your-proxy-url.com/v1

# ============================================
# 阿里云 OSS 配置
# ============================================
ALIYUN_AK_ID=your-aliyun-access-key-id
ALIYUN_AK_SECRET=your-aliyun-access-key-secret
ALIYUN_OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com

# ============================================
# MongoDB 配置
# ============================================
MONGODB_URI=mongodb://username:password@host:port
MONGODB_DB=your_database_name
MONGODB_CHECKPOINT_COLLECTION_NAME=checkpoints
MONGODB_WRITES_COLLECTION_NAME=writes

# ============================================
# Nacos 服务注册配置
# ============================================
NACOS_SERVER=127.0.0.1:8848
NACOS_USERNAME=nacos
NACOS_PASSWORD=your-nacos-password
NACOS_NAMESPACE=

# 服务配置
SERVICE_NAME=hdd-agent-module
SERVICE_GROUP=DEFAULT_GROUP
SERVICE_PORT=8000
SERVICE_IP=auto
EPHEMERAL=true

# ============================================
# 向量数据库配置
# ============================================
VECTOR_DB_URL=http://localhost:6333
VECTOR_DB_TOKEN=your-vector-db-token
